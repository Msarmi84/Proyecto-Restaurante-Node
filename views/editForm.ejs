<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <%- include('navbar'); %>
            </div>
        </div>

        <div class="row">
            <% result.forEach(function(dish){ %>
            <div class="col-12 textUsers">
                <h1 class="h1TextUsers">Ups! you have some wrong?</h1>
                <h5 class="h1TextUsers">Here you can change you dates Chef <%-result[0].name %></h5>
            </div>
            <% }) %>
        </div>


        <div class="row oneDishUsers">
            <% result.forEach(function(dish){ %>
            <div class="col-8 colOneDishUsers">
                <div class="card md-3" style="max-width: 1000px;">
                    <div class="row no-gutters">
                        <div class="col-md-7">
                            <img src="/images/<%- dish.image %>" class="card-img-top imageCardUsers" alt="...">
                        </div>

                        <div class="col-md-5">
                            <form action="/users/updateDish/<%- result[0].id_dish %>" method="POST">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Name</label>
                                        <input type="text" name="name" value="<%- result[0].name %>"
                                            class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Ingredients</label>
                                        <input type="text" name="ingredients" value="<%- result[0].ingredients %>"
                                            class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                    </div>

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="email" name="email" value="<%- result[0].email %>"
                                            class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-dark">Save</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <% }) %>
        </div>















